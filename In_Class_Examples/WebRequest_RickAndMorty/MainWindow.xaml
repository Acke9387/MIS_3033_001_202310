<Window x:Class="WebRequest_RickAndMorty.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WebRequest_RickAndMorty"
        mc:Ignorable="d"
        Title="Rick and Morty" Height="450" Width="800">
    <Window.Background>
        <ImageBrush ImageSource="https://cdn11.bigcommerce.com/s-ydriczk/products/90069/images/97748/Rick-and-Morty-Rick-Morty-Smith-Lifesize-Cardboard-Cutout-buy-now-at-starstills__63410.1678789939.450.659.jpg"/>
    </Window.Background>
    <Grid>
        <Label Content="Select a character:" HorizontalAlignment="Left" Margin="55,65,0,0" VerticalAlignment="Top"/>
        <ComboBox x:Name="cboCharacters" HorizontalAlignment="Left" Margin="177,69,0,0" VerticalAlignment="Top" Width="120" SelectionChanged="cboCharacters_SelectionChanged"/>
        <Label Content="Character Name:" HorizontalAlignment="Left" Margin="70,0,0,0" VerticalAlignment="Center"/>
        <TextBox x:Name="txtName" HorizontalAlignment="Left" Margin="184,0,0,0" TextWrapping="Wrap" VerticalAlignment="Center" Width="120" IsEnabled="False"/>
        <Image x:Name="imgCharacter" HorizontalAlignment="Left" Height="289" Margin="391,133,0,0" VerticalAlignment="Top" Width="373"/>

    </Grid>
</Window>
